{
  "name": "trimerge-sync-basic-client",
  "version": "0.5.0",
  "description": "basic websocket client for trimerge-sync",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "typings": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "jest --watch",
    "test-ci": "jest --coverage --passWithNoTests",
    "watch": "rollup -c -w",
    "start": "ts-node-dev --respawn --transpile-only src/sample-server.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcello3d/trimerge.git"
  },
  "keywords": [
    "json",
    "three-way-merge",
    "diff",
    "diff3",
    "merge"
  ],
  "author": {
    "name": "Marcello Bast√©a-Forte",
    "email": "marcello@cellosoft.com"
  },
  "license": "Zlib",
  "bugs": {
    "url": "https://github.com/marcello3d/trimerge-sync/issues"
  },
  "homepage": "https://github.com/marcello3d/trimerge-sync#readme",
  "dependencies": {
    "better-sqlite3": "^7.4.0",
    "fs-extra": "^10.0.0",
    "project-name-generator": "^2.1.9",
    "ws": "^7.4.5"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "17.1.0",
    "@rollup/plugin-node-resolve": "11.2.0",
    "@types/better-sqlite3": "^5.4.1",
    "@types/fs-extra": "^9.0.11",
    "@types/ws": "^7.4.4",
    "jest": "26.6.3",
    "rollup": "2.39.1",
    "rollup-plugin-typescript2": "0.30.0",
    "trimerge-sync": "*",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "4.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    }
  }
