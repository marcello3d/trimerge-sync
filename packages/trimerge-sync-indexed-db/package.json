  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcello3d/trimerge.git"
  },
  "keywords": [
    "json",
    "three-way-merge",
    "diff",
    "diff3",
    "merge"
  ],
  "author": {
    "name": "Marcello Bast√©a-Forte",
    "email": "marcello@cellosoft.com"
  },
  "license": "Zlib",
  "bugs": {
    "url": "https://github.com/marcello3d/trimerge-sync/issues"
  },
  "homepage": "https://github.com/marcello3d/trimerge-sync#readme",
  "dependencies": {
    "broadcast-channel": "^3.4.1",
    "idb": "6.0.0"
  },
  "peerDependencies": {
    "trimerge-sync": "^0.1.1"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "17.1.0",
    "@rollup/plugin-node-resolve": "11.2.0",
    "immer": "^8.0.1",
    "jest": "26.6.3",
    "rollup": "2.39.1",
    "rollup-plugin-typescript2": "0.30.0",
    "trimerge-sync": "^0.1.1",
    "typescript": "4.2.2"
